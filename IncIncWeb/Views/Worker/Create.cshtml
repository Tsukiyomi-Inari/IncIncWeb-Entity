@model IncIncWeb.Models.WorkerModel

@{
	ViewData["Title"] = "Create";
}

<h1>Add Worker</h1>


<hr />
<div class="row">
	<div class="col justify-content-center ">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="FirstName" class="control-label text-center"></label>
				<input asp-for="FirstName" class="form-control-sm" />
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="LastName" class="control-label text-center"></label>
				<input asp-for="LastName" class="form-control-sm" />
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Messages" class="control-label text-center"></label>
				<input asp-for="Messages" class="form-control-sm" />
				<span asp-validation-for="Messages" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
